@page "/chitietdiemso/hienthi/{idDaoTao}/{idChiTietLopHoc}"

@inject IConfiguration Configuration

@if (_listChiTietDiemSos == null)
{
	<LoadingIndicator></LoadingIndicator>
}
else
{

<div>
	<h1 style="float:left">Danh Sách Điểm Sinh Viên Trong Lớp</h1>
</div>

<table class="table">

	<thead>
		<tr>
			<th scope="col">STT</th>
			<th scope="col">Mã Sinh Viên</th>
			<th scope="col">Họ Và Tên</th>
			
			@foreach(var item in _listDiemSos)
			{
					<th scope="col">
						@item.TenDauDiem
					</th>
			}
			<th scope="col">Điểm Trung Bình</th>
			
		</tr>
	</thead>

@*	<tbody>

			
	</tbody>
*@
</table>
}



