        sinhVien.DuongDanAnh = null;
        sinhVien.SoDienThoai = null;
        sinhVien.DiaChi = null;
        sinhVien.TrangThai = 0;
        sinhVien.IdChuyenNganh = Guid.Empty;
    }

    //
    [Parameter]
    public string idDaoTao { get; set; }



