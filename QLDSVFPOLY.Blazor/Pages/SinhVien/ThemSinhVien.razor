@page "/sinhvien/themmoi/{idDaoTao}"

@using QLDSVFPOLY.BUS.ViewModels.ChuyenNganh
@using QLDSVFPOLY.BUS.ViewModels.SinhVien
@using QLDSVFPOLY.Blazor.Repository.Implements
@using QLDSVFPOLY.Blazor.Repository.Interfaces

@if (_listSinhViens == null || _listChuyenNganh == null)
{
	<LoadingIndicator></LoadingIndicator>
}
else
{


<h1>Thêm Sinh Viên</h1>

<style>
    #dd {
        border: 1px black;
        width: 17vw;
        height: 46vh;
        margin-left: 10px;
    }
</style>

<EditForm Model="sinhVien">

    <div class="w-25" style="float: left; margin-top:20px">

        <img id="dd" /><br />

        <input multiple="" type="file" _bl_2="" style="margin-top:15px;margin-left:45px">

    </div>

    <div class="w-75" style="float: right;padding-left:20px;">

        <div class="row">

            <div class="col">
                <label>Mã Sinh Viên</label>
                <input type="text" class="form-control" @bind-value="sinhVien.Ma">
            </div>

            <div class="col">
                <label>Email</label>
                <input type="text" class="form-control" @bind-value="sinhVien.Email">

            </div>

        </div>

        <div class="row" style="margin-top:10px">
            <div class="col">
                <label>Họ</label>
                <input type="text" class="form-control" @bind-value="sinhVien.Ho">
            </div>
            <div class="col">
                <label>Ngày Nhập Học</label>
                <input type="date" class="form-control" @bind-value="sinhVien.NgayTao">
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col">
                <label>Tên Đệm</label>
                <input type="text" class="form-control" @bind-value="sinhVien.TenDem">
            </div>
            <div class="col">
                <label>Số Điện Thoại</label>
                <input type="email" class="form-control" @bind-value="sinhVien.SoDienThoai">
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col">
                <label>Tên</label>
                <input type="text" class="form-control" @bind-value="sinhVien.Ten">
            </div>
                <div class="col">
                    <label>Trạng Thái</label>
                    <select class="form-control" @bind="sinhVien.TrangThai">
                        <option value=1>Đang học</option>
                        <option value=2>Đang nghỉ học</option>
                    </select>
                </div>
            </div>

        <div class="row" style="margin-top:10px">

            <div class="col">
                <label>Giới Tính</label>
                <select class="form-control" @bind="sinhVien.GioiTinh">
                    <option value=0>Nam</option>
                    <option value=1>Nữ</option>
                </select>
            </div>

            <div class="col">
                <label>Chuyên Ngành</label>

                    <select class="form-control" @bind="sinhVien.IdChuyenNganh">

                        @foreach (var i in _listChuyenNganh)
                        {
                            if (sinhVien.IdChuyenNganh != Guid.Empty)
                            {
                                if (i.Id == sinhVien.IdChuyenNganh)
                                {
                                    <option selected value="@i.Id">@i.TenChuyenNganh</option>
                                }
                                else
                                {
                                    <option value="@i.Id">@i.TenChuyenNganh</option>
                                }
                            }
                            else{
                                <option value="@i.Id">@i.TenChuyenNganh</option>
                            }
                        }

                    </select>

               
            </div>

        </div>

        <div class="row" style="margin-top:10px">

            <div class="col">
                <label>Ngày Sinh</label>
                <input type="date" class="form-control" @bind-value="sinhVien.NgaySinh">
            </div>

            <div class="col">
                <label>Địa Chỉ</label>
                <input type="text" class="form-control" @bind-value="sinhVien.DiaChi">
            </div>

        </div>


        <div class="row" style="margin-top:10px">

            <div class="col">
            </div>

            <div class="col">
                <button type="button" class="btn btn-primary" style="float:left" @onclick="()=>ReLoad()">LÀM MỚI</button>
                <button type="button" class="btn btn-primary" style="float:right" @onclick="()=>Them()">THÊM</button>
            </div>

        </div>

    </div>
</EditForm>
}
@code {

