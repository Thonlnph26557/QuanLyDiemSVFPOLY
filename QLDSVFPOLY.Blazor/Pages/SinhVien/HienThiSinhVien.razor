@page "/sinhvien/hienthi/{idDaoTao}"

@inject IConfiguration Configuration

@if (_listSinhViens == null && _listChuyenNganh == null)
{
	<LoadingIndicator></LoadingIndicator>
}
else
{

<div>
	<h1 style="float:left">Danh Sách Sinh Viên</h1>
	<button type="button" class="btn btn-primary" style="float: right; margin-right:40px"  @onclick="()=>NavigationThemMoi()">Thêm</button>
</div>

<table class="table">

	<thead>
		<tr>
			<th scope="col">STT</th>
			<th scope="col">Họ Và Tên</th>
			<th scope="col">Giới Tính</th>
			<th scope="col">Ngày Sinh</th>
			<th scope="col">Địa Chỉ</th>
			<th scope="col">Số Điện Thoại</th>
			<th scope="col">Email</th>
			<th scope="col">Chuyên Ngành</th>
			<th scope="col">Ngày Nhập Học</th>
			<th scope="col">Chi Tiết</th>
			<th scope="col">Xóa</th>
		</tr>
	</thead>

	<tbody>

		@for (int i = 0; i < _listSinhViens.Count(); i++)
		{
			var item = _listSinhViens[i];

		<tr>
			<th scope="row">@(i+1)</th>
			<td>@item.Ho @item.TenDem @item.Ten</td>
			<td>@(item.GioiTinh == 1 ? "Nữ" : "Nam")</td>
			<td>@item.NgaySinh.ToString("MM/dd/yyyy")</td>
			<td>@item.DiaChi</td>
			<td>@item.SoDienThoai</td>
			<td>@item.Email</td>
			<td>@_listChuyenNganh.FirstOrDefault(c => c.Id == @item.IdChuyenNganh).TenChuyenNganh</td>
			<td>@item.NgayTao.ToString("MM/dd/yyyy")</td>
			<td><button type="button" class="btn btn-link" @onclick="()=>NavigationChiTiet(item.Id)">Chi tiết</button></td>
			<td><button type="button" class="btn btn-danger" @onclick="()=>OnDeleteSinhVien(item.Id)">Xóa</button></td>
		</tr>
		
		}
	</tbody>

</table>
}



