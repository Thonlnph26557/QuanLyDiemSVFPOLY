@page "/nhanviendaotao/themmoi/{idDaoTao}"

@using QLDSVFPOLY.BUS.ViewModels.NhanVienDaoTao
@using QLDSVFPOLY.Blazor.Repository.Implements
@using QLDSVFPOLY.Blazor.Repository.Interfaces


<h1>Thêm Nhân Viên Đào Tạo</h1>

<style>
    #dd {
        border: 1px black;
        width: 17vw;
        height: 46vh;
        margin-left: 10px;
    }
</style>

<EditForm Model="nhanVienDaoTao">

    <div class="w-25" style="float: left; margin-top:20px">

        <img id="dd" /><br />

        <input multiple="" type="file" _bl_2="" style="margin-top:15px;margin-left:45px">

    </div>

    <div class="w-75" style="float: right;padding-left:20px;">

        <div class="row">

            <div class="col">
                <label>Mã Nhân Viên Đào Tạo</label>
                <input type="text" class="form-control" @bind-value="nhanVienDaoTao.Ma">
            </div>

            <div class="col">
                <label>Ngày Sinh</label>
                <input type="date" class="form-control" @bind-value="nhanVienDaoTao.NgaySinh">

            </div>

        </div>

        <div class="row" style="margin-top:10px">
            <div class="col">
                <label>Họ</label>
                <input type="text" class="form-control" @bind-value="nhanVienDaoTao.Ho">
            </div>
            <div class="col">
                <label>Địa Chỉ</label>
                <input type="text" class="form-control" @bind-value="nhanVienDaoTao.DiaChi">
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col">
                <label>Tên Đệm</label>
                <input type="text" class="form-control" @bind-value="nhanVienDaoTao.TenDem">
            </div>
            <div class="col">
                <label>Email</label>
                <input type="email" class="form-control" @bind-value="nhanVienDaoTao.Email">
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col">
                <label>Tên</label>
                <input type="text" class="form-control" @bind-value="nhanVienDaoTao.Ten">
            </div>
            <div class="col">
                <label>Số Điện Thoại</label>
                <input type="text" class="form-control" @bind-value="nhanVienDaoTao.SoDienThoai">
            </div>
        </div>

        <div class="row" style="margin-top:10px">

            <div class="col">
                <label>Giới Tính</label>
                <select class="form-control" @bind="nhanVienDaoTao.GioiTinh">
                    <option value=0>Nam</option>
                    <option value=1>Nữ</option>
                </select>
            </div>

            <div class="col">
                <label>Trạng Thái</label>
                <select class="form-control" @bind="nhanVienDaoTao.TrangThai">
                    <option value=1>Đang làm</option>
                    <option value=2>Đang nghỉ làm</option>
                </select>
            </div>

        </div>

        <div class="row" style="margin-top:10px">

            <div class="col">
            </div>

            <div class="col">
                <button type="button" class="btn btn-primary" style="float:left" @onclick="()=>ReLoad()">LÀM MỚI</button>
                <button type="button" class="btn btn-primary"  style="float:right"  @onclick="()=>Them()">THÊM</button>
            </div>

        </div>

    </div>
</EditForm>

@code {
    private NhanVienDaoTaoCreateVM nhanVienDaoTao = new();

    [Inject] private INhanVienDaoTaoRepos nhanVienDaoTaoRepos { set; get; }

    private async Task Them()
    {
        nhanVienDaoTao.DuongDanAnh = "default.png";
        nhanVienDaoTao.MatKhau = "aa";
        nhanVienDaoTao.TenDangNhap = "png";
        nhanVienDaoTao.IdDaoTao = Guid.Parse("9d01fb1f-6d12-4b11-9962-871c333e659b");
        await nhanVienDaoTaoRepos.CreateAsync(nhanVienDaoTao);
        await LoadData();
    }

    [Parameter]
    public string idDaoTao { set; get; }


    private NhanVienDaoTaoUpdateVM updateVM = new();

    protected override async Task OnInitializedAsync()
    {
        idDaoTao = "9D01FB1F-6D12-4B11-9962-871C333E659B";
        await LoadData();
        await ReLoad();
    }

    // Khai báo
    private NhanVienDaoTaoVM obj;

    private List<NhanVienDaoTaoVM> _listNhanVienDaoTaos;

    private NhanVienDaoTaoSearchVM _search = new NhanVienDaoTaoSearchVM();

    //
    private async Task LoadData()
    {
        _listNhanVienDaoTaos = await nhanVienDaoTaoRepos.GetAllActiveAsync(_search);

        _listNhanVienDaoTaos = _listNhanVienDaoTaos.Where(c => c.IdDaoTao == Guid.Parse(idDaoTao)).ToList();
    }


    //
    private async Task ReLoad()
    {
        nhanVienDaoTao.IdDaoTao = Guid.NewGuid();
        nhanVienDaoTao.Ho = null;
        nhanVienDaoTao.TenDem = null;
        nhanVienDaoTao.Ten = null;
        nhanVienDaoTao.Ma = null;
        nhanVienDaoTao.Email = null;
        nhanVienDaoTao.TenDangNhap = null;
        nhanVienDaoTao.MatKhau = null;
        nhanVienDaoTao.DuongDanAnh = null;
        nhanVienDaoTao.SoDienThoai = null;
        nhanVienDaoTao.DiaChi = null;
        nhanVienDaoTao.TrangThai = 0;
        nhanVienDaoTao.GioiTinh = 0;
        nhanVienDaoTao.NgaySinh = DateTime.Now;
    }
}
